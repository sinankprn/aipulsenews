---
layout: null
---
[
  {% for post in site.posts %}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "date": {{ post.date | date: "%B %d, %Y" | jsonify }},
    "description": {{ post.description | default: post.excerpt | strip_html | truncatewords: 50 | jsonify }},
    "content": {{ post.content | strip_html | normalize_whitespace | truncatewords: 200 | jsonify }},
    "tags": {{ post.tags | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
